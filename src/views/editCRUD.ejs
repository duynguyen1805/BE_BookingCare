<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Info</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="POST">
                <div class="form-row">
                    <div class="col-lg-12 mt-3 mb-3"><b>Edit user:</b></div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputEmail4">First name</label>
                        <input type="text" class="form-control" name="firstName" value="<%=user.firstName%>">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputPassword4">Last name</label>
                        <input type="text" class="form-control" name="lastName" value="<%=user.lastName%>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" name="address" value="<%=user.address%>">
                </div>
                <div class="form-row">
                    <div class="form-group col-12">
                        <label for="inputPhonenumber">Phone number</label>
                        <input type="text" class="form-control" name="phonenumber" value="<%=user.phonenumber%>">
                    </div>
                </div>
                <input type="text" name="id" value="<%=user.id%>" hidden></input>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>